<html>

<head>

	<title>Private chat room</title>

	<link type="text/css" rel="stylesheet" href="/assets/stylesheets/chatclient.css" />
	<link href="http://fonts.googleapis.com/css?family=Open+Sans Condensed:300italic,300,700" rel="stylesheet" type="text/css">
   <script type="text/javascript">
		var userId = "<%=( typeof user !== "undefined" ? user.id : null)%>";
		var userName = "<%=( typeof user !== "undefined" ? user.firstname : null)%>";
		var userEmail = "<%=( typeof user !== "undefined" ? user.email : null)%>";
	</script>
</head>
<body>
     <section class="section">
     <!-- These elements are displayed as white info cards in the middle of the screen --> 
         <div class="connected">

		      </div>

		<div class="personinside">

		</div>

		<div class="invite-textfield">

			<h2>Chat Invite Sent</h2>
			<h5>Waiting for your friend to accept chat request..</h5>

		</div>

		<div class="left">

			<img src="/assets/images/unnamed.jpg" id="leftImage" />

			<div class="info">
				<h2><span class="nickname-left"></span> has left this chat.</h2>
				<h5>Close this page when you are done</h5>
			</div>

		</div>

		<div class="toomanypeople">

			<h2>Oops, you can not join this chat!</h2>
			<!--<h5>There are already two people in it. Would you like to create a <a title="New Room" href="/create" id="room">new room</a>?</h5>-->

		</div>

		<div class="nomessages">

			<img src="/assets/images/unnamed.jpg" id="noMessagesImage" />

			<div class="info">
				<h2>You are chatting with <span class="nickname-chat"></span>.</h2>
				<h5>Send them a message from the form below!</h5>
			</div>

		</div>

		<div class="chatscreen">

			<ul class="chats">
				<!-- The chat messages will go here -->
			</ul>

		</div>

	</section>

	<footer>

		<form id="chatform">

			<textarea id="message" placeholder="Write something.."></textarea>
			<input type="submit" id="submit" value="SEND"/>

		</form>

	</footer>

<!--<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>-->
	<script src="/assets/components/jquery/dist/jquery.min.js"></script>

	<script src="/assets/javascript/moment.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="/assets/javascript/chatclient.js"></script>

</body>

</html>