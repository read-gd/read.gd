<% include ../partials/header.html.ejs %>

<div id="content" class="container solutions">

		<p><%= list.length %> users</p>
		<% list.forEach(function(opportunity){ %>
		    <div class="item thumbnail">
			    <div class="row">
					<div class="col-md-1 col-sm-2 col-xs-4">
						<a href="/profile/<%= opportunity._id %>"><% if (opportunity.photo) { %><img src="<%= opportunity.photo+'?dim=200x200' %>" class="img-responsive"><%} else {%><img src="/assets/images/kk-cover.png?dim=200x200" class="img-responsive" /><% } %></a>
					</div>
					<div class="col-md-11 col-sm-10 col-xs-8">
						<h2 class="rs"><a href="/profile/<%= opportunity._id %>"><%= opportunity.name %></a></h2>
						<% if (opportunity.locations.length > 0) { %>
							<p><%= opportunity.usertype %> &middot; <%= opportunity.locations[0].city %>, <%= opportunity.locations[0].country %> &middot; <% } %><strong>Created</strong> <%= moment(opportunity.createDate).fromNow() %></p>

					</div>
				</div>
			</div>
		<%});%>


</div><!-- container -->

